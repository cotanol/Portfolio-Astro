---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import ProjectCard from '../components/ProjectCard';

const projects = [
  {
    title: 'E-commerce Platform',
    description: 'A modern e-commerce platform built with React and Node.js',
    image: '/projects/proyecto1.avif',
    technologies: ['React', 'Node.js', 'MongoDB', 'Tailwind CSS'],
    link: '#',
  },
  {
    title: 'Task Management App',
    description: 'A collaborative task management application',
    image: '/projects/proyecto2.avif',
    technologies: ['Vue.js', 'Firebase', 'Vuex'],
    link: '#',
  },
  {
    title: 'Weather Dashboard',
    description: 'Real-time weather information dashboard',
    image: '/projects/proyecto3.avif',
    technologies: ['React', 'TypeScript', 'OpenWeather API'],
    link: '#',
  },
];

const skills = [
  { name: 'React', level: 90 },
  { name: 'TypeScript', level: 85 },
  { name: 'Node.js', level: 80 },
  { name: 'Tailwind CSS', level: 95 },
  { name: 'Next.js', level: 85 },
  { name: 'Git', level: 90 },
];
---

<Layout title="Frontend Developer Portfolio">
  <NavBar />
  
  <!-- Hero Section -->
  <section id="home" class="min-h-screen flex items-center justify-center pt-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6">
        Frontend
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--primary)] to-[var(--secondary)]">
          Developer
        </span>
      </h1>
      <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Creating beautiful and functional web experiences with modern technologies
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="#projects"
          class="bg-[var(--primary)] hover:bg-[var(--primary)]/90 text-white px-8 py-3 rounded-lg transition-colors"
        >
          View Projects
        </a>
        <a
          href="#contact"
          class="border border-[var(--primary)] text-[var(--primary)] hover:bg-[var(--primary)]/10 px-8 py-3 rounded-lg transition-colors"
        >
          Contact Me
        </a>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-20 bg-gray-900/50">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">
        Featured <span class="text-[var(--primary)]">Projects</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => <ProjectCard {...project} client:load />)}
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">
        Technical <span class="text-primary">Skills</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto">
        {skills.map((skill) => (
          <div class="bg-gray-800 p-4 rounded-lg">
            <div class="flex justify-between mb-2">
              <span class="font-medium">{skill.name}</span>
              <span class="text-[var(--primary)]">{skill.level}%</span>
            </div>
            <div class="w-full bg-gray-700 rounded-full h-2.5">
              <div
                class="bg-[var(--primary)] h-2.5 rounded-full"
                style={`width: ${skill.level}%`}
              >
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gray-900/50">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">
          Get In <span class="text-[var(--primary)]">Touch</span>
        </h2>
        <div class="max-w-xl mx-auto">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-400 mb-2">Name</label>
              <input
                type="text"
                id="name"
                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-[var(--primary)]"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-400 mb-2">Email</label>
              <input
                type="email"
                id="email"
                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-[var(--primary)]"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-400 mb-2">Message</label>
              <textarea
                id="message"
                rows="5"
                class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-[var(--primary)]"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-[var(--primary)] hover:bg-[var(--primary)]/90 text-white px-8 py-3 rounded-lg transition-colors hover:cursor-pointer"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>
  </div>
</Layout>