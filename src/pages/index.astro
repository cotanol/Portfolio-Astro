---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import ProjectCard from "../components/ProjectCard.astro";
import SkillCard from "../components/SkillCard.astro";
import FormContact from "../components/Form/index";
import { projects } from "../data/projects-data";
import { skills } from "../data/skill-data";
import { Icon } from "astro-icon/components";
---

<Layout title="Francisco Salcedo Morales | Web Developer">
  <Navbar client:load />

  <!-- Hero Section -->
  <section
    id="home"
    class="min-h-screen flex items-center justify-center pt-20"
  >
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div class="text-left">
          <p class="text-[var(--primary)] text-lg sm:text-xl font-medium mb-4">
            Hi, I'm Francisco ðŸ‘‹
          </p>
          <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold mb-6">
            Frontend
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--primary)] to-[var(--secondary)]"
            >
              Developer
            </span>
          </h1>
          <p class="text-lg sm:text-xl text-gray-400 mb-8">
            Creating beautiful and functional web experiences with modern
            technologies
          </p>
          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <a
              href="#projects"
              class="bg-[var(--primary)] hover:bg-[var(--primary)]/90 text-white px-8 py-3 rounded-lg transition-colors"
            >
              View Projects
            </a>
            <a
              href="#contact"
              class="border border-[var(--primary)] text-[var(--primary)] hover:bg-[var(--primary)]/10 px-8 py-3 rounded-lg transition-colors"
            >
              Contact Me
            </a>
          </div>
          <div class="flex gap-4 mt-8">
            <a
              href="https://www.linkedin.com/in/francisco-jose-salcedo-morales-1791b8303/"
              target="_blank"
              rel="noopener noreferrer"
              ><Icon
                class="text-gray-400 hover:text-[var(--primary)] transition-colors hover:animate-bounce"
                name="linkedin"
                width={40}
                height={40}
              /></a
            >
            <a
              href="https://github.com/cotanol"
              target="_blank"
              rel="noopener noreferrer"
              ><Icon
                class="text-gray-400 hover:text-[var(--primary)] transition-colors hover:animate-spin"
                name="github"
                width={40}
                height={40}
              /></a
            >
          </div>
        </div>
        <div class="relative order-first md:order-last mb-8 md:mb-0">
          <div
            class="relative w-48 sm:w-64 md:w-full aspect-square mx-auto rounded-full overflow-hidden border-4 border-[var(--primary)]/20"
          >
            <picture>
              <source srcset="./gato-perfil-avif.avif" type="image/avif" />
              <source srcset="./gato-perfil-webp.webp" type="image/webp" />
              <img
                src="./gato-perfil-webp.webp"
                alt="Francisco Salcedo"
                class="w-full h-full object-cover"
              />
            </picture>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 bg-gray-900/50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl sm:text-4xl font-bold text-center mb-12">
        About <span class="text-[var(--primary)]">Me</span>
      </h2>
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-lg text-gray-400 mb-6">
          I'm a passionate Frontend Developer and university student exploring
          the world of web development. With experience in React, TypeScript,
          and modern web technologies, I enjoy building responsive, accessible,
          and user-friendly applications.
        </p>
        <p class="text-lg text-gray-400">
          I focus on writing clean, maintainable code while continuously
          improving performance and user interactions. Always eager to learn and
          explore new technologies, I aim to refine my skills and contribute to
          impactful projects in the ever-evolving web development landscape.
        </p>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-20 bg-gray-900/50">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">
        Featured <span class="text-[var(--primary)]">Projects</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {projects.map((project) => <ProjectCard project={project} />)}
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">
        Technical <span class="text-[var(--primary)] hover:animate-pulse"
          >Skills</span
        >
      </h2>
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 max-w-5xl mx-auto"
      >
        {skills.map((skill) => <SkillCard skill={skill} />)}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-gray-900/50">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">
        Get In <span class="text-[var(--primary)]">Touch</span>
      </h2>
      <div class="max-w-xl mx-auto">
        <FormContact client:load />
      </div>
    </div>
  </section>
</Layout>
